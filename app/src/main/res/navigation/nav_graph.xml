<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.toybeth.docto.ui.features.splash.SplashFragment"
        android:label="SplashFragment">

        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>

    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.toybeth.docto.ui.features.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.toybeth.docto.ui.features.payment.PaymentFragment"
        android:label="PaymentFragment" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.toybeth.docto.ui.features.login.LoginFragment"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordEnterEmailFragment"
            app:destination="@id/forgetPasswordEnterEmailFragment"/>

    </fragment>

    <fragment
        android:id="@+id/forgetPasswordEnterEmailFragment"
        android:name="com.toybeth.docto.ui.features.forgetpassword.enteremail.ForgetPasswordEnterEmailFragment"
        android:label="ForgetPasswordEnterEmailFragment"/>

</navigation>