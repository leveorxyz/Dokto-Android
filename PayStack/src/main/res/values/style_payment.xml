<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditTextStyle" parent="LayoutWrapHeight">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:paddingTop">@dimen/size_14</item>
        <item name="android:paddingBottom">@dimen/size_14</item>
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:paddingRight">@dimen/size_16</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CCVDateHolder" parent="LayoutWrapHeight">
        <item name="android:layout_marginTop">@dimen/size_16</item>
    </style>

    <style name="SecureLogo">
        <item name="android:layout_width">@dimen/size_120</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="PaymentButton" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/size_2</item>
        <item name="android:translationZ" tools:targetApi="lollipop">0dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">.05</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/payment_button</item>
        <item name="android:text">Pay</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">match_parent</item>ÃŸ
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_14</item>

    </style>

    <style name="LayoutMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LayoutWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutWrapWidth">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>